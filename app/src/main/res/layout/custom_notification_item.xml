<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/custom_notification_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_shopping_cart"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/custom_notification_tv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="0"
        android:background="@drawable/custom_notification_shape"
        android:textColor="#fff"
        android:padding="4dp"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_above="@id/custom_notification_iv"
        android:layout_toEndOf="@id/custom_notification_iv"
        android:layout_marginStart="-15dp"
        android:layout_marginBottom="-15dp"/>

</RelativeLayout>